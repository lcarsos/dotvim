execute pathogen#infect()
execute pathogen#helptags()
syntax on
filetype plugin indent on

colorscheme wombat256

set nocompatible
set autoindent
set expandtab
set formatoptions=crql
set guifont=Inconsolata
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L
set mouse=n
set nowrap
set number
set cursorline
set scrolloff=6
set shiftwidth=4
set smartindent
set splitbelow
set splitright
set tabstop=4
set undodir=~/.vim/undofiles
set undofile
set wildchar=<tab>
set wildmenu
set wildmode=list:longest
set list listchars=tab:→\ ,trail:␣,nbsp:␣
map Q <nop>
